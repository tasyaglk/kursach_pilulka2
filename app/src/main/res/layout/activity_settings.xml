<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SettingsActivity">



    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poller_one"
        android:text="@string/settings"
        android:textColor="@color/words_color_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/main_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_main"
        android:textColor="@color/words_color"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="88dp" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_notifications"
        android:textColor="@color/words_color"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="162dp" />

    <TextView
        android:id="@+id/about_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_about_app"
        android:textColor="@color/words_color"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="350dp" />

    <TextView
        android:id="@+id/settings_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_account"
        android:textColor="@color/words_color"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="575dp" />

    <Button
        android:id="@+id/main_view"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="117dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/main_screen_view"
        android:textColor="@color/words_color_dark"
        android:gravity="left"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/sound"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/sound"
        android:textColor="@color/words_color_dark"
        android:textSize="15sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="194dp" />

    <Switch
        android:id="@+id/left_pills"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="231dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:gravity="left"
        android:minHeight="48dp"
        android:text="@string/left_pills_notifications"
        android:textColor="@color/words_color_dark"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumbTint="@color/settings_green"
        android:trackTint="@color/settings_green" />

    <Switch
        android:id="@+id/left_time"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="268dp"
        android:gravity="left"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/left_time_notifications"
        android:textColor="@color/words_color_dark"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumbTint="@color/settings_green"
        android:trackTint="@color/settings_green"/>

    <Switch
        android:id="@+id/take_pills"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/take_pills_notifications"
        android:textColor="@color/words_color_dark"
        android:textSize="15sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="305dp"
        android:thumbTint="@color/settings_green"
        android:trackTint="@color/settings_green"/>

    <Button
        android:id="@+id/confidential_policy"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="382dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:gravity="left"
        android:text="@string/confidential_policy"
        android:textColor="@color/words_color_dark"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/using_conditions"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/using_conditions"
        android:textColor="@color/words_color_dark"
        android:textSize="15sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="419dp" />

    <Button
        android:id="@+id/support"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/support"
        android:textColor="@color/settings_blue"
        android:textSize="15sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="456dp" />

    <Button
        android:id="@+id/education"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/education"
        android:gravity="left"
        android:textColor="@color/settings_blue"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="493dp" />

    <Button
        android:id="@+id/premium_pro"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:gravity="left"
        android:text="@string/premium_pro"
        android:textColor="@color/settings_green"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="530dp" />

    <Button
        android:id="@+id/log_out"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:background="@drawable/white_settings_button"
        android:ems="10"
        android:minHeight="48dp"
        android:text="@string/log_out"
        android:textColor="@color/settings_red"
        android:textSize="15sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="605dp"  />

</RelativeLayout>